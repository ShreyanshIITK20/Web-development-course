<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">       <!--onchange allows us to submit the form when checkbox is clicked and value stores the ID of the item checked so that we can identify uniquely that box-->
            <p><%=  item.name  %></p>         <!--only diplaying the name of object instead of whole JS object-->    
          </div>
        </form>
    <% }) %>
      
    
    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
  </div>

<%- include("footer") -%>
